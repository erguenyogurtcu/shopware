{% if not feature('cache_rework')  %}
    {% if not header is defined and page is defined %}
        {% set header = page.header %}
    {% endif %}
{% endif %}

{% block layout_main_navigation %}
    <div class="main-navigation"
         id="mainNavigation"
         data-flyout-menu="true">
        {% block layout_main_navigation_navbar %}
            <div class="container">
                {% block layout_main_navigation_menu %}
                    <nav class="nav main-navigation-menu"
                        itemscope="itemscope"
                        itemtype="http://schema.org/SiteNavigationElement">
                        {% set homeLabel = context.salesChannel.translated.homeName|default('general.homeLink'|trans) %}

                        {% block layout_main_navigation_menu_home %}
                            {% if context.salesChannel.translated.homeEnabled %}
                                <a class="nav-link nav-item-{{ context.salesChannel.navigationCategoryId }} main-navigation-link{% if controllerAction is same as('home') %} active{% endif %} home-link"
                                    href="{{ path('frontend.home.page') }}"
                                    itemprop="url"
                                    title="{{ homeLabel|striptags }}">
                                    <div class="main-navigation-link-text">
                                        <span itemprop="name">{{ homeLabel|sw_sanitize }}</span>
                                    </div>
                                </a>
                            {% endif %}
                        {% endblock %}

                        {% block layout_main_navigation_menu_items %}

                            {% if feature('cache_rework') %}
                                {% foreach header.navigation.items as item %}
                                    {% set hasChildren = item.children|length > 0 %}
                                    {% if item.type == 'folder' %}
                                        <div class="nav-link nav-item-{{ item.id}} main-navigation-link" {% if hasChildren %} data-flyout-menu-trigger="{{ item.id }}"{% endif %} title="{{ item.name }}">
                                            <div class="main-navigation-link-text">
                                                <span itemprop="name">{{ item.name }}</span>
                                            </div>
                                        </div>
                                    {% else %}
                                        <a class="nav-link nav-item-{{ item.id}} main-navigation-link"
                                           href="{{ category_url(item) }}"
                                           itemprop="url"
                                           title="{{ item.name }}"
                                           {% if hasChildren %}data-flyout-menu-trigger="{{ item.id }}"{% endif %}
                                           {% if category_linknewtab(item) %}target="_blank"{% endif %}>
                                            <div class="main-navigation-link-text">
                                                <span itemprop="name">{{ item.name }}</span>
                                            </div>
                                        </a>
                                    {% endif %}
                                {% endforeach %}
                            {% else %}
                                {% set activePath = header.navigation.active.path %}

                                {% for treeItem in header.navigation.tree %}
                                    {% set category = treeItem.category %}
                                    {% set name = category.translated.name %}

                                    {% block layout_main_navigation_menu_item %}
                                        {% if category.type == 'folder' %}
                                            <div class="nav-link nav-item-{{ item.id}} main-navigation-link"
                                                {% if treeItem.children|length > 0 %}
                                                    data-flyout-menu-trigger="{{ category.id }}"
                                                {% endif %}
                                                  title="{{ name }}">
                                                <div class="main-navigation-link-text">
                                                    <span itemprop="name">{{ name }}</span>
                                                </div>
                                            </div>
                                        {% else %}
                                            <a class="nav-link nav-item-{{ item.id}} main-navigation-link{% if category.id == header.navigation.active.id or category.id in activePath %} active{% endif %}"
                                               href="{{ category_url(category) }}"
                                               itemprop="url"
                                               {% if treeItem.children|length > 0 %}data-flyout-menu-trigger="{{ category.id }}"{% endif %}
                                               {% if category_linknewtab(category) %}target="_blank"{% endif %}
                                               title="{{ name }}">
                                                <div class="main-navigation-link-text">
                                                    <span itemprop="name">{{ name }}</span>
                                                </div>
                                            </a>
                                        {% endif %}
                                    {% endblock %}
                                {% endfor %}
                            {% endif %}

                        {% endblock %}

                    </nav>
                {% endblock %}
            </div>
        {% endblock %}

        {% block layout_main_navigation_menu_flyout_wrapper %}
            {% set navigationChildrenCount = 0 %}

            {% if feature('cache_rework') %}
                {% for item in header.navigation.items %}
                    {% if item.children|length > 0 %}
                        {% set navigationChildrenCount = navigationChildrenCount + 1 %}
                    {% endif %}
                {% endfor %}
            {% else %}
                {% for treeItem in header.navigation.tree %}
                    {% if treeItem.category.childCount > 0 %}
                        {% set navigationChildrenCount = navigationChildrenCount + 1 %}
                    {% endif %}
                {% endfor %}
            {% endif %}

            {% if navigationChildrenCount > 0 %}
                {% block layout_main_navigation_menu_flyout_container %}
                    <div class="navigation-flyouts">
                        {% block layout_main_navigation_menu_flyouts %}
                            {% if feature('cache_rework') %}
                                {% set items = header.navigation.items %}
                            {% else %}
                                {% set items = header.navigation.tree %}
                            {% endif %}

                            {% for treeItem in items %}
                                {% if treeItem.children|length > 0 %}

                                    {% if feature('cache_rework') %}
                                        {% set id = treeItem.id %}
                                    {% else %}
                                        {% set id = treeItem.category.id %}
                                    {% endif %}

                                    {% block layout_main_navigation_menu_flyout %}
                                        <div class="navigation-flyout"
                                             data-flyout-menu-id="{{ id }}">
                                            <div class="container">

                                                {% block layout_main_navigation_menu_flyout_include %}
                                                    {% sw_include '@Storefront/storefront/layout/navigation/flyout.html.twig' with {
                                                        themeIconConfig: themeIconConfig,
                                                        navigationTree: treeItem,
                                                        level: level+1,
                                                        page: page
                                                    } only %}
                                                {% endblock %}
                                            </div>
                                        </div>
                                    {% endblock %}
                                {% endif %}
                            {% endfor %}
                        {% endblock %}
                    </div>
                {% endblock %}
            {% endif %}
        {% endblock %}
    </div>
{% endblock %}
